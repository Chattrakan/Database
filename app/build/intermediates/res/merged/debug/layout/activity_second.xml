<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:weightSum="1">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter Menu"
            android:id="@+id/menu"
            android:layout_weight="0.91" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter Price"
            android:id="@+id/price"
            android:layout_weight="0.07" />

    </LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:weightSum="1">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Food"
            android:onClick="onClick"
            android:id="@+id/food" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Drink"
            android:onClick="onClick"
            android:id="@+id/drink" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Entertain"
            android:onClick="onClick"
            android:id="@+id/entertain" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Energy"
            android:onClick="onClick"
            android:id="@+id/energy" />


    </LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:weightSum="1">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Monthly"
            android:onClick="onClick"
            android:id="@+id/monthly" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Part Time"
            android:onClick="onClick"
            android:id="@+id/partTime" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Luckky"
            android:onClick="onClick"
            android:id="@+id/luckky" />

    </LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:weightSum="1">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Save"
            android:onClick="onClick"
            android:id="@+id/save" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Back"
            android:onClick="onClick"
            android:id="@+id/Back" />
    </LinearLayout>

</LinearLayout>
